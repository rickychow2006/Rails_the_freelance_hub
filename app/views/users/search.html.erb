<div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-9 text-center m-5">
          <form action="/search" method="get">
              <div class="form-group bg-primary rounded-pill mb-0 px-2 py-2 shadow">
                  <div class="row">
                      <div class="col">
                          <div class="input-group input-group-merge shadow-none">
                              <div class="input-group-prepend">
                                <span class="input-group-text bg-transparent border-0"><i data-feather="search"></i></span>
                              </div>
                              <input class="form-control form-control-flush shadow-none" type="text" name="search" placeholder="Search again ...">
                                <div class="col-auto">
                                 <button class="btn btn-block btn-primary rounded-pill" type="submit">Search</button>
                                </div>
                          </div>
                      </div>
                  </div>
              </div>
          </form>
      </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="fw-bold, text-center">
            <h2>Search Results: </h1><br>
        </div>
            <section class="post-list"> 
                <% @posts_results.each do |post| %>
                    <section class="post-list mb-1"> 
                        <div>
                            <div class="post-list__time fw-bold text-center">
                                <%= post.created_at.to_time.strftime('%_m/%-d/%Y') %>
                            </div>
                            <div class="post-list__preview">
                                <h4><%= link_to post.title, post_path(post) %></h4>
                                    <div class="post-show__topics">
                                    <a class ="btn btn-primary btn-sm" href="/services/<%=post.service.id%>"> <h5><%= post.service.name.upcase %></h5>
                                    </a>
                                    </div>
                            </div>
                        </div>
                    </section>
                <% end %>
           </section>
     </div>
</div>