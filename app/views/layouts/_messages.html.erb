<%= content_tag(:div, flash[:error], class: "text-danger text-center", :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], class: "text-warning text-center", :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], class: "text-danger text-center", :id => "flash_alert") if flash[:alert] %>
<%= content_tag(:div, flash[:success], class: "text-success text-center", :id => "flash_success") if flash[:success] %>
