<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" integrity="sha384-3AB7yXWz4OeoZcPbieVW64vVXEwADiYyAEhwilzWsLw+9FgqpyjjStpPnpBO8o8S" crossorigin="anonymous">

<section class="vh-100">
  <div class="container py-5 h-90">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-7 col-lg-7 col-xl-6">
        <h1>Welcome to the Freelance Hub!</h1>
        <br>
        <img src="https://freelance-hub.s3.amazonaws.com/freelance.jpg" class="img-fluid" alt="login image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <%= form_for :user do |f| %>   
          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.text_field :email, class:"form-control form-control-lg" %>
            <%= f.label "Email", class:"form-label"%>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <%= f.password_field :password, class:"form-control form-control-lg" %>
            <%= f.label "Password", class:"form-label"%>
          </div>
          <!-- Submit button -->
          <%= f.submit "Sign in", class: "btn btn-primary btn-lg btn-block m-0 form-control"%>

          <div class="divider d-flex justify-content-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">Or Sign In Using</p>
          </div>
          
          <a class="btn btn-primary btn-lg btn-block form-control" href='/auth/google_oauth2' role="button">
            <i class="fab fa-google"></i>     Continue with Google
          </a>

          <div class="divider d-flex justify-content-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">Or Sign Up Using Email</p>
          </div>

          <a class="btn btn-primary btn-lg btn-block form-control" href='/signup' role="button">
            Create an Account
          </a>
          <%end%>
      </div>
    </div>
  </div>
</section>